#!/usr/bin/env bash

# Update package list
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Create a custom HTML file for Nginx
cat <<EOL > /var/www/html/index.nginx-debian.html
Hello World!
EOL

# Restart Nginx to apply changes
sudo service nginx restart

echo "Nginx has been installed and configured to return 'Hello World!' on port 80."
