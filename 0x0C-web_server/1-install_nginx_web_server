#!/usr/bin/env bash

# Update package list
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Create a custom HTML file for Nginx
# cat <<EOL > /var/www/html/index.nginx-debian.html
# Hello World!
# EOL

# this is to enable the nginx to use the firewall
sudo ufw 'Nginx HTTP'
echo "Hello World!" | sudo -tee /var/www/html/index.nginx-debian.html

# check the configuration and  Restart Nginx to apply changes
sudo nginx -t
sudo service nginx restart
